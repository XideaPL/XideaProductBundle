{% extends 'XideaProductBundle::main.html.twig' %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'product_list.title'|trans }}</h1>
{% endblock %}
{% block bundle_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'product_list.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{ 'product.sku'|trans }}</th>
                                    <th>{{ 'product.name'|trans }}</th>
                                    <th>{{ 'product.price'|trans }}</th>
                                    <th>{{ 'product.retail_price'|trans }}</th>
                                    <th>{{ 'product.qty'|trans }}</th>
                                    <th>{{ 'product.updated_at'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for model in models %}
                                    <tr>
                                        <td>{{ model.id }}</td>
                                        <td>{{ model.sku }}</td>
                                        <td>{{ model.name }}</td>
                                        <td>{{ model.price }}</td>
                                        <td>{{ model.retailPrice }}</td>
                                        <td>{{ model.qty }}</td>
                                        <td>{{ model.updatedAt|date() }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}
