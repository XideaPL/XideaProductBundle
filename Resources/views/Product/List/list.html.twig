{% extends xidea_template('product_main') %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'product_list.title'|trans }}</h1>
{% endblock %}
{% block bundle_main %}
    {% block product_main %}
        <div class="box box-default product-box">
            <div class="box-header">
                <h3 class="box-title">{{ 'product_list.title'|trans }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {% block product_list %}
                    <div class="product-list table-responsive">
                        <table class="table table-striped product-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.sku'|trans, 'p.sku') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.name'|trans, 'p.name') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.price'|trans, 'p.price') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.retail_price'|trans, 'p.retailPrice') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.qty'|trans, 'p.qty') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'product.updated_at'|trans, 'p.updatedAt') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for model in models %}
                                    <tr>
                                        <td>{{ model.id }}</td>
                                        <td>{{ model.sku }}</td>
                                        <td>{{ model.name }}</td>
                                        <td>{{ model.price }}</td>
                                        <td>{{ model.retailPrice }}</td>
                                        <td>{{ model.qty }}</td>
                                        <td>{{ model.updatedAt|date() }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>{{ 'product.sku'|trans }}</th>
                                    <th>{{ 'product.name'|trans }}</th>
                                    <th>{{ 'product.price'|trans }}</th>
                                    <th>{{ 'product.retail_price'|trans }}</th>
                                    <th>{{ 'product.qty'|trans }}</th>
                                    <th>{{ 'product.updated_at'|trans }}</th>
                                </tr>
                            </tfoot>
                        </table>
                        {{ xidea_base_pagination(models) }}
                    </div>
                    <!-- /.product-list -->
                {% endblock %}
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    {% endblock %}
{% endblock %}
