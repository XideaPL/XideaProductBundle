{% extends 'XideaProductBundle::main.html.twig' %}
{% block xidea_product_header_title %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'product_action.show.title'|trans({'%product_name%':model.name}) }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}
{% block xidea_product_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'product_action.show.details.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                          <tr>
                            <th scope="row">
                              <code>{{ 'product.name'|trans }}</code>
                            </th>
                            <td>{{ model.name }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'product.description'|trans }}</code>
                            </th>
                            <td>{{ model.description }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'product.created_at'|trans }}</code>
                            </th>
                            <td>{{ model.createdAt|date }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'product.updated_at'|trans }}</code>
                            </th>
                            <td>{{ model.updatedAt|date }}</td>
                          </tr>
                        </tbody>
                      </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}
